}
@article{holland_2020a,
title = {Robustness and applicability of transcription factor and pathway analysis tools on single-cell {RNA}-seq data.},
author = {Holland, Christian H and Tanevski, Jovan and Perales-Patón, Javier and Gleixner, Jan and Kumar, Manu P and Mereu, Elisabetta and Joughin, Brian A and Stegle, Oliver and Lauffenburger, Douglas A and Heyn, Holger and Szalai, Bence and Saez-Rodriguez, Julio},
