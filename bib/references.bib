@article{jansen_2017,
title = {The ascending pathophysiology of cholestatic liver disease.},
author = {Jansen, Peter L M and Ghallab, Ahmed and Vartak, Nachiket and Reif, Raymond and Schaap, Frank G and Hampe, Jochen and Hengstler, Jan G},
pages = {722-738},
url = {http://dx.doi.org/10.1002/hep.28965},
