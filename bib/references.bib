@article{robrahn_2021,
title = {Conditional deletion of {HIF}-1\alpha provides new insight regarding the murine response to gastrointestinal infection with Salmonella Typhimurium},
author = {Robrahn, Laura and Dupont, Aline and Jumpertz, Sandra and Zhang, Kaiyi and Holland, Christian H. and Guillaume, Joël and Rappold, Sabrina and Cerovic, Vuk and Saez-Rodriguez, Julio and Hornef, Mathias W. and Cramer, Thorsten},
url = {http://biorxiv.org/lookup/doi/10.1101/2021.01.16.426940},
year = {2021},
