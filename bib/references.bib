@article{sezgin_2018,
title = {Spatio-temporal visualization of the distribution of acetaminophen as well as its metabolites and adducts in mouse livers by {MALDI} {MSI}.},
author = {Sezgin, Selahaddin and Hassan, Reham and Zühlke, Sebastian and Kuepfer, Lars and Hengstler, Jan G and Spiteller, Michael and Ghallab, Ahmed},
