@article{kim_2021,
title = {Gene deconvolution reveals aberrant liver regeneration and immune cell infiltration in alcohol-associated hepatitis.},
author = {Kim, Adam and Wu, Xiaoqin and Allende, Daniela S and Nagy, Laura E},
url = {http://dx.doi.org/10.1002/hep.31759},
year = {2021},
