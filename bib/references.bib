@article{zellmer_2010,
title = {Transcription factors {ETF}, {E2F}, and {SP}-1 are involved in cytokine-independent proliferation of murine hepatocytes.},
author = {Zellmer, Sebastian and Schmidt-Heck, Wolfgang and Godoy, Patricio and Weng, Honglei and Meyer, Christoph and Lehmann, Thomas and Sparna, Titus and Schormann, Wiebke and Hammad, Seddik and Kreutz, Clemens and Timmer, Jens and von Weizsäcker, Fritz and Thürmann, Petra A and Merfort, Irmgard and Guthke, Reinhard and Dooley, Steven and Hengstler, Jan G and Gebhardt, Rolf},
